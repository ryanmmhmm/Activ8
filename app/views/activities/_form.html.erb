<%= form_for @activity do |f| %>

<!-- BRING UP WITH TEAM ABOUT ADDING CONTAINER
 -->
 <div class="container">
  <div class="activityform">
    <div class="field">
      <%= f.label :title %><br/>
      <%= f.text_field :title, :placeholder => "Activity Name e.g. Soccer at Trinity Bellwoods" %>
    </div>

    <div class="field">
      <%= f.label :description %><br/>
      <%= f.text_area :description, :placeholder => "Activity Description" %>
    </div>

    <div class="field">
      <%= f.label :location %><br/>
      <%= f.text_field :location, :placeholder => "180 University Ave, Toronto, ON M5H" %>
    </div>

    <div class="field">
     <%= f.label :end_time %><br/>
     <%= f.date_field :end_time %>
     <%= f.time_field :end_time, ignore_date: true %>
   </div>

    <div class="field">
      <%= f.label :picture_url %><br/>
      <%= f.text_field :picture_url %>
    </div>

    <div class="submit">
      <%= submit_tag("Activ8 activity") %>
    </div>
  </div>
</div>

<% end %>