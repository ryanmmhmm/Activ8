<%= form_for @activity do |f| %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.date_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :picture_url %>
    <%= f.text_field :picture_url %>
  </div>

  <div class="submit">
    <%= submit_tag("Activ8 activity.") %>
  </div>

<% end %>