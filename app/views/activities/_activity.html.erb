<div class="activity">

  <li><img class="activity-owner" src="<%= activity.owner.picture_url %>" alt="Activ8'r Image"></li>
  <li><%= link_to "#{activity.owner.username}", user_url(activity.owner), class: 'activity-owner' %></li>

  <li><img src="<%= activity.picture_url %>" alt="Activity Image"></li>

  <li><%= link_to "#{activity.title}", activity_path(activity) %></li>
  <li><%= activity.location %></li>
  <li><%= activity.end_time.to_date %></li>
  <li><p><%= activity.description %></p></li>

  <% if activity.owner == current_user %>
    <hr>
    <span class="activity-options">
      <%= button_to 'Edit', { action: :edit, id: activity.id }, method: :get %>
      <%= button_to 'De-Activ8', { action: :destroy, id: activity.id }, method: :delete, data: { confirm: "Are you sure you want to De-Activ8 your activity: #{activity.title}?" } %>
    </span>
  <% end %>
</div>