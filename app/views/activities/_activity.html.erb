<div class="cards">
  <div class="card">
    <div class="card-image">
      <img src="<%= activity.picture_url %>" alt="Activ8'r Image">
      <%= link_to "#{activity.owner.username}", user_url(activity.owner)%>
    </div>
    <div class="card-header">
      <p><%= link_to "#{activity.title}", activity_path(activity) %></p>
    </div>
    <div class="card-copy">
      <p><b>Address:</b> <%= activity.location %></p>
      <p><b>End Time:</b> <%= activity.end_time.to_date %></p>
      <p><b>Description:</b> <%= activity.description %></p>
    </div>


    <!-- <img src="<%# activity.picture_url %>" alt="Activity Image"> -->
    <div class="card-header">
      <%= link_to 'Add Comment', new_activity_comment_path(activity) %>
      <% if activity.owner == current_user %>
        <div class="actions">
          <%= button_to 'Edit', { action: :edit, id: activity.id }, method: :get %>
          <%= button_to 'Delete', { action: :destroy, id: activity.id }, method: :delete, data: { confirm: "Are you sure you want to De-Activate your activity: #{activity.title}?" } %>
        </div>
      <% end %>
      </div>
  </div>
</div>