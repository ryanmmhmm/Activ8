<p id="notice"><%= notice %></p>

<h1>User Profile</h1>

<div class="user container">
  <img src="<%= @user.picture_url %>" alt="Profile Picture">

  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Crypted password:</strong>
    <%= @user.crypted_password %>
  </p>

  <p>
    <strong>Salt:</strong>
    <%= @user.salt %>
  </p>
</div>

<p><%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %></p>
<hr>
<h1>User's Comments</h1>

<div class="comments container">
  <%= render partial: 'comments/comment', collection: @user.comments %>
</div>