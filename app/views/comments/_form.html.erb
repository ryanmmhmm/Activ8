
<%= form_for [@activity, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %></h2>
      <ul>
      <%= @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="commentform">
  <h1 class="commentheader">Add a new comment</h1>
  <hr>
  <div class="field">
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
 </div

<% end %>


